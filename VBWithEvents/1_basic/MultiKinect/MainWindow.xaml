                     Height="350" VerticalAlignment="Top" Margin="0,33,0,0" />
        <my:KinectWindow x:Name="KinectWindow2" Width="525" HorizontalAlignment="Left"
                     Height="350" VerticalAlignment="Top" Margin="531,33,0,0" />
        <my:KinectWindow Height="350" HorizontalAlignment="Left" Margin="0,389,0,0"
                     x:Name="KinectWindow3" VerticalAlignment="Top" Width="525" />
        <my:KinectWindow Height="350" HorizontalAlignment="Left" Margin="531,389,0,0"
                     x:Name="KinectWindow4" VerticalAlignment="Top" Width="525" />
        <ComboBox Height="24" HorizontalAlignment="Left" Name="ComboBoxSkeleton"
              VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox1_SelectionChanged" />
    </Grid>
