<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="519" Width="662" Closing="Window_Closing">
    <Grid>
        <Image Height="480" HorizontalAlignment="Left" Name="RGBCameraImage" Stretch="Fill" VerticalAlignment="Top" Width="640" />
        <Canvas Height="480" HorizontalAlignment="Left" Name="canvas" VerticalAlignment="Top" Width="640">
            <Ellipse Height="36" Name="CrossEllipse" Width="36" StrokeThickness="10" >
                <Ellipse.Stroke>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0" />
                        <GradientStop Color="#FFDE4242" Offset="0.893" />
                        <GradientStop Color="#FFEF5050" Offset="0.629" />
                        <GradientStop Color="Black" Offset="1" />
                        <GradientStop Color="#FF080F18" Offset="0.143" />
                    </RadialGradientBrush>
                </Ellipse.Stroke>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>

